<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mediumTheme</item>
        <item name="colorPrimaryDark">@color/deepTheme</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textViewStyle">@style/mamaTextViewStyle</item>
        <item name="android:editTextStyle">@style/mamaEditTextStyle</item>
        <item name="buttonStyle">@style/mamaButtonStyle</item>
    </style>
    <style name="mamaPopupStyle" parent="Widget.AppCompat.PopupMenu">
        <item name="android:fontFamily">@font/noto_sans_light</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:itemBackground">@color/black</item>
    </style>
    <style name="mamaTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/noto_sans_light</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="mamaEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/noto_sans_light</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@drawable/bg_underscore</item>
    </style>
    <style name="mamaButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>
