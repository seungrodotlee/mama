<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="fragment"
            type="com.seungrodotlee.mama.dialog.NewTodoItemDialog" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/black">
        <EditText
            android:id="@+id/dialog_create_new_todo_title_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:fontFamily="@font/noto_sans_black"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:hint="제목을 입력하세요" />
        <Button
            android:id="@+id/dialog_create_new_todo_date_picker_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:includeFontPadding="false"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/noto_sans_light"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:onClick="@{fragment::openDatePicker}"/>
        <EditText
            android:id="@+id/dialog_create_new_todo_description_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:background="@android:color/transparent"
            android:maxLines="5"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/noto_sans_light"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:hint="이 날 무슨 일이 있는건가요?" />
        <Button
            android:id="@+id/dialog_create_new_todo_select_project_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="2dp"
            android:paddingHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:includeFontPadding="false"
            android:background="@drawable/bg_round_pos"
            android:fontFamily="@font/noto_sans_black"
            android:onClick="@{fragment::selectProject}"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:text="프로젝트 없음 (일반 일정)" />
        <EditText
            android:id="@+id/dialog_create_new_todo_tag_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:paddingTop="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"
            android:inputType="text"
            android:background="@drawable/bg_underscore"
            android:fontFamily="@font/noto_sans_light"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:imeOptions="actionNext"
            android:hint="태그1 (엔터) 태그2 ..." />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/dialog_create_new_todo_tag_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="20dp"/>
        <TextView
            android:id="@+id/dialog_create_new_todo_empty_tag_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/noto_sans_regular"
            android:includeFontPadding="false"
            android:textSize="12dp"
            android:text="엄... 아직 태그가 없네요..!"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/dialog_create_new_todo_negative_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="@color/darkGray"
                android:fontFamily="@font/noto_sans_light"
                android:textSize="16dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="취소" />
            <Button
                android:id="@+id/dialog_create_new_todo_positive_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="@color/deepTheme"
                android:fontFamily="@font/noto_sans_black"
                android:textSize="16dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:text="선택" />
        </LinearLayout>
    </LinearLayout>
</layout>