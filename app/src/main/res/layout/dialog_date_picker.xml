<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="fragment"
            type="com.seungrodotlee.mama.dialog.MamaDatePicker"/>
    </data>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/black">
    <com.seungrodotlee.mama.element.MamaCalendar
        android:id="@+id/date_picker_calendar"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/date_picker_negative_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="@color/darkGray"
            android:fontFamily="@font/noto_sans_light"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="취소" />
        <Button
            android:id="@+id/date_picker_positive_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="@color/deepTheme"
            android:fontFamily="@font/noto_sans_black"
            android:textSize="16dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="선택" />
    </LinearLayout>
</LinearLayout>
</layout>